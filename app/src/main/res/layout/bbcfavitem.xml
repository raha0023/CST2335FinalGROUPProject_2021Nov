<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/artTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artPubDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artTitle"
                android:text="2020-03-20 12:30:00"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/artDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artPubDate"
                android:text="Description"

                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/artLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artDescription"
                android:autoLink="web"
                android:text="@string/link"
                android:textColor="#329EF4" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/artLink"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:background="@drawable/baseline_delete_black_24dp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>